                        else:
                            print("I'm not sure what you are trying to do.")
                    else:
                        print("I did not understand, please try again")
                elif com=="move" and withSentence==False and OnSentence==False:
                    if len(Items)==1:
                        if Items[0]=="Bed":
                            if CheckCurLoc()=="24":
                                bed()
                                successfulCommand=True
                            else:
                                print("Can't see any movable beds here.")
                        else:
                            print("I'm not sure what you are trying to do.")
                    else:
                        print("I didn't understand, please try again.")
                else:
                    print("I didn't understand, please try again.")
                    
        if battleOutcome!="run":
            monsterMove()
        if checkIfLanternIsOn()==True and JustLighted==False:
            decreaseOil()
        if checkOil()==False:
            if runOutOfOil()==True:
                shouldDisplayDescription=checkRoomLight()
                if shouldDisplayDescription==False:
                    move_look=True
    if gameover==True:
        (end,Trigger,Trigger2)=GameOver()
        gameover=False


                                if checkIfUserHaveItem(Items[0])==True:
                                    print("You can't do that.")
                                elif Items[0] in gameItems():
                                    print("You don't have %s."%(Items[0].lower()))
                                else:
                                    print("I didn't quite understand.")
                        else:
                            understandable=True
                            for item in Items:
                                if item not in gameItems():
                                    understandable=False
                            if understandable==True:
                                    print("One thing at a time, my friend.")
                            else:
                                    print("I didn't understand, please try again.")
                    else:
                        if object1=="lantern":
                            if len(Items)==1 and Items[0]=="Matches":
                                if com=="light" or com=="light up" or com=="turn on":
                                    shouldDisplayDescription=checkRoomLight()
                                    if LightLantern()==True:
                                        successfulCommand=True
                                        if shouldDisplayDescription==False:
                                            move_look=True
                                        JustLighted=True
                                else:
                                    print("You can't do that.")
                            elif len(Items)==1:
                                if com=="light" or com=="light up" or com=="turn on":

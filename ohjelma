end = "temp"
Trigger=False
Trigger2=False

while (end != "quit"):
    TriggerIsOn=False
    TriggerIsOn2=False
    if CheckCurLoc()=="25" and checkIfRoomVisited()==False and Trigger==False:
        Trigger=True

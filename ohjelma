        print("Darkness")
        print("You can't see a thing in this pitch dark room!")
    else:
        printCharCurLocName()
        displayItemsInRoom()
    if TriggerIsOn==True:
        print("You hear a blood chilling howl from the castle's ward. That's not an ordinary wolf...")
        spawnMonster(1,4)
    if TriggerIsOn2==True:
        spawnMonster(2,50)
        spawnMonster(2,49)
        spawnMonster(2,48)
    move_look=False
    battleOutcome=Monsters()
    if battleOutcome=="lose":
        gameover=True
    elif battleOutcome=="run":
        print()
        move_look=True
    else:
        gameover=False
    com="temp"
    while move_look == False and end != "quit" and gameover==False:
        JustLighted=False
        successfulCommand=False

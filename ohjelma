                elif com=="light up" or com=="light" or com=="turn on" or com=="turn off" or com=="shut off":
                    if withSentence==False:
                        if len(Items)==1:
                            if Items[0]=="Lantern":
                                if com=="light" or com=="light up" or com=="turn on":
                                    shouldDisplayDescription=checkRoomLight()
